html
  font-family "Arial"
  width 100%
  height 100%
  margin 0
  display flex
  overflow hidden

body
  margin 0
  flex-grow 1
  display flex
  overflow hidden
  flex-direction column
  align-items stretch

.banner
  display flex
  flex none
  padding 0 2rem

  .banner-header
    flex-grow 1
    flex-basis auto

  .banner-actions
    display flex
    flex-direction column
    align-items center
    justify-content center
    flex none
    flex-direction flex-end

    h4
      margin 0.5rem 0

    .banner-action
      flex-basis auto
      flex-grow 1
      justify-content center

      &:hover
        border-bottom 3px solid lightgray
        cursor pointer

      &.github
        &:before
          content url('../img/github.svg')
          font-size 2.7rem

.content-container
  border-top 1px solid lightgray
  display flex
  flex-direction column
  flex-grow 1
  flex-basis auto
  overflow auto
  background-color #fafafa

  .content
    flex-basis auto
    flex-grow 1
    padding 0 2rem

  .footer
    flex none
    font-size 10px
    border-top 1px solid lightgray
    color #bdbdbd
    text-align center
    background-color white
    padding 1rem 0

blockquote, pre
  border-left 5px solid lightgray
  padding 0.5rem
  background #f2f2f2
